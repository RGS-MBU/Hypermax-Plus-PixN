	  </image>
	
	<text name="md_description">
        <visible>false</visible>    
    </text>

	<text name="md_name">
        <visible>false</visible>    
		</text>
	
	<image name="md_marquee">
        <visible>false</visible>    
		</image>
		
     <helpsystem name="help">
	 <iconColor>FFFFFF</iconColor>
     <fontSize>0.02</fontSize>
     <origin>0.5 0.5</origin>
     <pos>0.5 0.985</pos>
       <fontPath>./_inc/fonts/Digital-Serial-Bold-folder.ttf</fontPath>
     </helpsystem>
	 
	 	        <image name="borde" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>        
         <path>./_inc/borde.png</path>
         <zIndex>99999</zIndex>          
      </image> 
	
	  
		<gridtile name="default">
        <visible>false</visible>    
		</gridtile>
	
	<image name="shadowcover01" extra="true">
