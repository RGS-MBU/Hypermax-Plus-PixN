<?xml version="1.0" encoding="UTF-8"?>
<theme>
<formatVersion>7</formatVersion>

  <!---------------------------custom------------------------------------- -->

<customView name="Gamelist cover" inherits="grid">
       <image name="thumbnail-hypermax" extra="true">
		<path>{game:thumbnail}</path>
          <visible>false</visible> 
		</image>

      <image name="character" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>        
         <zIndex>9</zIndex>
      </image> 
	  
	  <image name="cliente" extra="true">
		<pos>0.01 0.01</pos>
		<maxSize>0.08 0.08</maxSize>
		<color>ffffff</color>
		<path>./_inc/assets/cliente.png</path>
		<zIndex>999</zIndex>
	  </image>
			
	<text name="md_name">
			<fontPath>./_inc/fonts/gomarice_no_continue.ttf</fontPath>
			<fontSize>0.05</fontSize>
			<pos>0.55 0.90</pos>
			<size>0.3 0.0248148148148148</size>
			<alignment>left</alignment>
			<color>ffffff</color>
			<glowColor>10101099</glowColor>			
			<glowSize>3</glowSize>			
		</text>

	
		<gridtile name="default">
			<size>0.22875 0.33</size>
			<backgroundColor>00000000</backgroundColor>
		</gridtile>
	
	<image name="shadowcover01" extra="true">
		<path>./_inc/caratula.png</path>
		<size>1 1</size>
		<pos>0 0</pos>
		<origin>0 0</origin>
		<zIndex>10</zIndex>
	</image>
	
	<image name="logo03" extra="true">
        <pos>0.845 0.81</pos>
        <maxSize>0.10 0.10</maxSize>
		<path>./default/_inc/logo.png</path>
		<path>./_inc/logos/${system.theme}.png</path>
		<color>ffffff</color>
	    <zIndex>400</zIndex>
	</image>

     <video name="md_video">
		<color>ffffff</color>
		<origin>0.5 0.5</origin>
		<pos>0.65 0.485</pos>
		<delay>0.5</delay>
		<effect>none</effect>		 
        <showSnapshotNoVideo>true</showSnapshotNoVideo>
        <showSnapshotDelay>true</showSnapshotDelay>
		<zIndex>2</zIndex>      
     </video> 
 	 
      <imagegrid name="gamegrid">
         <pos>-0.05 0.60</pos>
         <size>0.400 0.400</size>
         <scrollDirection>vertical</scrollDirection>
         <autoLayout>1 1</autoLayout>
         <autoLayoutSelectedZoom>1</autoLayoutSelectedZoom>
         <centerSelection>true</centerSelection>
		 <imageSource>thumbnail</imageSource>
         <scrollLoop>true</scrollLoop>
      </imagegrid>
	  
	  <image name="gridtile.image">
        <roundCorners>0.06</roundCorners>
     </image>
	
    <gridtile name="selected">
      <backgroundCenterColor>00000000</backgroundCenterColor>
      <backgroundEdgeColor>00000000</backgroundEdgeColor>	
      <imageColor>FFFFFFFF</imageColor>
    </gridtile>

    <ninepatch name="gridtile.background:selected">
      <animateColor>00000000</animateColor>
      <animateColorTime>75</animateColorTime>
    </ninepatch>
   </customView>
   
   </theme>
