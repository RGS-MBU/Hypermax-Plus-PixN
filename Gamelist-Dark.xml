<?xml version="1.0" encoding="UTF-8"?>
<theme>
<formatVersion>7</formatVersion>

 <!---------------------------custom------------------------------------- -->

<customView name="Gamelist-Dark" inherits="grid">
       <image name="thumbnail-hypermax" extra="true">
		<path>{game:thumbnail}</path>
          <visible>false</visible> 
		</image>

      <image name="character" extra="true">
      <visible>false</visible>        
      </image> 
	  
      <image name="shadowcover01" extra="true">
      <visible>false</visible>        
      </image> 

	<text name="md_genre">
			<size>0.10 0.10</size>
			<color>ffffff</color> 
			<origin>0.5 0.5</origin>
			<pos>0.10 0.83</pos>
			<fontSize>0.02</fontSize>
			<fontPath>./_inc/fonts/gomarice_no_continue.ttf</fontPath>
			<zIndex>91</zIndex>  
		</text>

		 <image name="md_fanart">
            <pos>0 0</pos>
            <origin>0 0</origin>
            <size>1 1</size>
			<color>FFFFFFDF</color>
            <zIndex>1</zIndex>
         </image>
		
	
	<text name="md_description">
	  	<color>ffffff</color>
		<fontSize>0.024</fontSize>
		<fontPath>./_inc/fonts/gomarice_no_continue.ttf</fontPath>
		<size>0.46 0.07</size>
		<pos>0.05 0.150</pos>
    </text>

	<text name="md_name">
			<fontPath>./_inc/fonts/gomarice_no_continue.ttf</fontPath>
			<fontSize>0.04</fontSize>
			<glowColor>101010</glowColor>
			<pos>0.05 0.03</pos>
			<size>0.30 0.0248148148148148</size>
			<alignment>left</alignment>
			<color>ffffff</color>
<storyboard event="activate" repeat="0">
<animation property="w" to="0.01" duration="2950" begin="800" autoreverse="true" repeat="1"/>
</storyboard>
		</text>
	
	<image name="md_marquee">
			<origin>1 0.5</origin>
			<pos>0.95 0.052</pos>
			<maxSize>0.2 0.08</maxSize>
		</image>
	
	
		<gridtile name="default">
			<size>0.22875 0.33</size>
			<backgroundColor>00000000</backgroundColor>
		</gridtile>
	
	<image name="cover" extra="true">
		<path>./_inc/cover.png</path>
		<size>1 1</size>
		<pos>0 0</pos>
		<origin>0 0</origin>
		<zIndex>10</zIndex>
	</image>

	   <video name="md_video">
		<color>ffffff</color>
		<origin>0.5 0.5</origin>
		<pos>0.85 0.485</pos>
		<delay>999</delay>
		<effect>none</effect>		 
        <showSnapshotNoVideo>false</showSnapshotNoVideo>
        <showSnapshotDelay>false</showSnapshotDelay>
		<zIndex>1</zIndex>      
     </video>
	  
    <imagegrid name="gamegrid">
		<color>000000</color>
		<pos>0 0.25</pos>
                <size>0.96 0.6</size>
		<autoLayout>4 1</autoLayout>
		<margin>0 0</margin>
		<padding>0.05 0.05 0.05 0.05</padding>
      <scrollDirection>horizontal</scrollDirection>
		<autoLayoutSelectedZoom>1.25</autoLayoutSelectedZoom>
		<animateSelection>false</animateSelection>
		<imageSource>image</imageSource>
        <zIndex>300</zIndex>
		<showVideoAtDelay>2</showVideoAtDelay>
    </imagegrid>
	
    <image name="gridtile.image">
      <roundCorners>0.06</roundCorners>
    </image>
	
    <gridtile name="default">
      <imageSizeMode>minSize</imageSizeMode>	
      <backgroundColor>00000000</backgroundColor>
      <backgroundCornerSize>0.06</backgroundCornerSize>
      <selectionMode>video</selectionMode>
      <padding>5 5</padding>
      <imageColor>ffffff</imageColor>
      <reflexion>0.25 0.0</reflexion>
    </gridtile>
	
      <gridtile name="selected" extra="true">
      <visible>false</visible>        
      </gridtile> 

    <ninepatch name="gridtile.background:selected">
     <visible>false</visible> 
    </ninepatch>

   <image name="gridtile.marquee">
      <origin>0.5 0.5</origin>
      <pos>0.5 0.5</pos>
      <color>FFFFFFFF</color>
      <size>0.96 0.96</size>
    </image>
	
    <image name="gridtile.marquee:selected">
      <origin>0 0</origin>
      <pos>0.05 0.01</pos>
      <color>ffffff</color>
      <size>0.96 0.1</size>
    </image>

    <image name="gridtile.marquee:videoplaying">
	  <origin>0 0</origin>
      <pos>0.05 0.01</pos>
      <color>ffffff00</color>
      <size>0.96 0.10</size>
	  </image> 

	<image name="logo03" extra="true">
        <pos>0.73 0.79</pos>
        <maxSize>0.20 0.20</maxSize>
		<path>./default/_inc/logo.png</path>
		<path>./_inc/logos/${system.theme}.png</path>	 
		<color>ffffff</color>
	    <zIndex>400</zIndex>
	</image>
	
		<text name="logoText">
		<pos>0.697 0.444</pos>
	    <fontSize>0.09</fontSize>
		<fontPath>./_inc/fonts/1.ttf</fontPath>
	    <size>0.57 0.1</size>
		<alignment>center</alignment>
            <color>FFFFFFB3</color>
           <forceUppercase>1</forceUppercase>
	    <rotation>-90</rotation>   
	    <zIndex>999</zIndex>
    </text>
   </customView>  
   
   </theme>
